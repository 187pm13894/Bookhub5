<html>

<head>
  <link href="/css/styles.css" type="text/css" rel="stylesheet" />

 
</head>

<body class="customer">
  <%- include('./_menu.ejs') %>
  <form action="./signup" method="POST">
      <div class="container" style="margin-top: 2%;">
        <div class="signup-box">
        <h1 class="text-center">Create Account</h1>
        <p class="text-center">Get started with your free account</p>
          <div class="textbox">
            <i class="fas fa-user-circle"></i>
            <input type="text" placeholder="Full Name" name="txtName" >
          </div>
          <div class="textbox">
             <i class="fas fa-envelope"></i> 
             <input name="txtEmail" placeholder="Email address" type="email" required/>
          </div> 
          <div class="textbox">
            <i class="fas fa-phone"></i> 
            <input name="txtPhone" pattern="0[0-9]{9}"  placeholder="Phone number" type="tel">
          </div> 
          <div class="textbox">
             <i class="fas fa-user"></i> 
             <input name="txtUsername"  placeholder="Username" type="text">
            </div> 
          <div class="textbox">
            <i class="fas fa-key"></i> 
            <input name="txtPassword" placeholder="Password" type="password">
          </div> 
          <div class="textbox">
            <i class="fas fa-key"></i> 
            <input name="txtcPassword" placeholder="Repeat password" type="password">
          </div>                                     
          <input type="submit" class="log" value="Sign Up" />
          <p class="text-center">Already have an account? <a href="/login" style="color: #5f81f0">Log In</a> </p> 
        </div>
      </div>       
  </form>
</body>
</html>